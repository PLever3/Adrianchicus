from kivy.app import App

from kivy.uix.label import Label
from kivy.uix.button import Button
from kivy.uix.gridlayout import GridLayout
from kivy.uix.boxlayout import BoxLayout

class IymApp(App):
    def build(self):
        gl = GridLayout(cols =2, spacing=100)

        gl.add_widget(Label(text="Easy Level"))
        gl.add_widget( Button(text="5 numbers"))

        gl.add_widget(Label(text="Normal Level"))
        gl.add_widget( Button(text="6 numbers"))

        gl.add_widget(Label(text="Heavy Level"))
        gl.add_widget( Button(text="7 numbers"))

        gl.add_widget(Label(text="Hard Level"))
        gl.add_widget( Button(text="8 numbers"))

        return gl

if __name__ == "__main__":
    IymApp().run()
